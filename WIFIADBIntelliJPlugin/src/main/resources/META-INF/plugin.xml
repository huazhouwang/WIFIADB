<?xml version="1.0" encoding="UTF-8"?>
<idea-plugin version="2">
    <id>adb.wifi.woaiwhz</id>
    <name>WIFI ADB ULTIMATE</name>
    <version>1.1</version>
    <vendor email="huazhou19@gmail.com" url="https://github.com/Sausure/WIFIADB/tree/master/WIFIADBIntelliJPlugin">
        HuaZhou Wang - (Sausure)
    </vendor>

    <description><![CDATA[
      Now you can connect your android devices over wifi really if you also use the android software I provided.
      <br/>
      Or connect devices using the USB cable for the first time.
      <br/>
      For more information,please visit my GitHub.
    ]]></description>

    <change-notes><![CDATA[
        1.1: Fix compatibility bug.<br>
        1.0: Initial release.<br>
    ]]>
    </change-notes>

    <idea-version since-build="131"/>

    <extensions defaultExtensionNs="com.intellij">
        <defaultProjectTypeProvider type="Android"/>
        <toolWindow
                id="WIFI ADB ULTIMATE"
                icon="/icons/app-icon.png"
                anchor="right"
                factoryClass="adb.wifi.woaiwhz.view.RootWindow"
                />
    </extensions>

    <depends>org.jetbrains.android</depends>

</idea-plugin>